<launch>
	<arg name="limit_motion" default="True" />

  <node pkg="tf" type="static_transform_publisher" name="laser_to_base" args="-0.27 0.175 0.0889 3.1416 0 0 base_link base_laser_link 50" />

  <node name="neato" pkg="neato_node" type="neato.py" output="screen">
    <param name="port" value="/dev/ttyACM0" />
		<remap if="$(arg limit_motion)" from="/cmd_vel" to="/limited_vel_cmd" />
  </node>

  <node if="$(arg limit_motion)" name="limit_motion" pkg="neato_node" type="limit_motion.py" />
</launch>
